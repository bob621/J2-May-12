public class CarComparator implements Comparator<Car> {
    int sortType;

    void setSortType(int sortType){
	this.sortType = sortType;
    }
    int compare (Car c1, Car c2){
	switch (sortType){
	case 1:
	    return c1.getMake().compareTo(c2.getMake());
	    break;
	case 2:
	    return c1.getModel().compareTo(c2.getModel());
	    break;
	case 3:
	    Integer inObj1 = new Integer (c1.getAge());
	    Integer inObj2 = new Integer (c2.getAge());
	    return inObj1.compareTo(inObj2);
    	case 4:
	    Integer inObj1 = new Integer (c1.getMiles());
	    Integer inObj2 = new Integer (c2.getMiles());
	    return inObj1.compareTo(inObj2);
	case 5:
	    Double dObj1 = new Double (c1.getPrice());
	    Double dObj2 = new Double (c1.getPrice());
	    return dObj1.co
	    
	    }
	    
    }
}